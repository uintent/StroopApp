<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskSelectionActivity">

    <!-- Empty state when no tasks/task lists are available -->
    <TextView
        android:id="@+id/text_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="32dp"
        android:text="No tasks or task lists available.\n\nPlease check your configuration file."
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" />

    <!-- Main content scroll view -->
    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Individual Tasks Section -->
            <LinearLayout
                android:id="@+id/section_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Individual Tasks"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a single task to run immediately"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_task_card" />

                <TextView
                    android:id="@+id/text_no_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No individual tasks available"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textStyle="italic"
                    android:padding="16dp"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="?android:attr/listDivider" />

            <!-- Task Lists Section -->
            <LinearLayout
                android:id="@+id/section_task_lists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Lists"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a task list to run multiple tasks in sequence"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_task_lists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_task_list_card" />

                <TextView
                    android:id="@+id/text_no_task_lists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No task lists available"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textStyle="italic"
                    android:padding="16dp"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>